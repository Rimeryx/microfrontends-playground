#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedir=`cygpath -w "$basedir"`
        fi
    ;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/mnt/c/Users/remib/DEV/microfrontends-playground/node_modules/.pnpm/vite@7.1.11_@types+node@24._a1be8544f9af668b08e36331f2a2a7dc/node_modules/vite/bin/node_modules:/mnt/c/Users/remib/DEV/microfrontends-playground/node_modules/.pnpm/vite@7.1.11_@types+node@24._a1be8544f9af668b08e36331f2a2a7dc/node_modules/vite/node_modules:/mnt/c/Users/remib/DEV/microfrontends-playground/node_modules/.pnpm/vite@7.1.11_@types+node@24._a1be8544f9af668b08e36331f2a2a7dc/node_modules:/mnt/c/Users/remib/DEV/microfrontends-playground/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/mnt/c/Users/remib/DEV/microfrontends-playground/node_modules/.pnpm/vite@7.1.11_@types+node@24._a1be8544f9af668b08e36331f2a2a7dc/node_modules/vite/bin/node_modules:/mnt/c/Users/remib/DEV/microfrontends-playground/node_modules/.pnpm/vite@7.1.11_@types+node@24._a1be8544f9af668b08e36331f2a2a7dc/node_modules/vite/node_modules:/mnt/c/Users/remib/DEV/microfrontends-playground/node_modules/.pnpm/vite@7.1.11_@types+node@24._a1be8544f9af668b08e36331f2a2a7dc/node_modules:/mnt/c/Users/remib/DEV/microfrontends-playground/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../../bin/vite.js" "$@"
else
  exec node  "$basedir/../../bin/vite.js" "$@"
fi
